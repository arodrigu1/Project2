{{> nav/nav-block}}

<main class="cake-submission-container">
  <form>
    <div class="form-group">
      <label for="inputAccount">Cake Name: </label>
      <input type="text" class="form-control" id="cake-name">
    </div>

    <div class="form-group">
      <label for="inputAccount">Cake Difficulty: </label>
      <input type="text" class="form-control" id="cake-difficulty">
    </div>

    <hr>

    <div class="form-group" id="ingredient-section">
    </div>

    <button id="add-ingredient" type="button" class="btn btn-primary">Add Ingredient</button>
    <button id="delete-ingredient" type="button" class="btn btn-primary">Delete Ingredient</button>

    <hr>

    <div class="form-group" id="instruction-section">
    </div>

      <button id="add-instruction" type="button" class="btn btn-primary">Add Instruction</button>
      <button id="delete-instruction" type="button" class="btn btn-primary">Delete Instruction</button>

    <hr>

    <div class="form-group hidden-form">
      <label>Cake Image URL: </label><br>
      <textarea class="form-control" id="cake-img-urls" rows="3"></textarea>
    </div>

    <div class="form-group image-submit">
      <br>
      <script async src="https://imgbb.com/upload.js" data-auto-insert="html-embed-medium"></script>
      <button id="add-images" type="button" class="btn btn-primary">Add Image</button>
      <button id="delete-images" type="button" class="btn btn-primary">Delete Image</button>
    </div>

  <button id="cake-submit" type="button" class="btn btn-primary">Submit</button>
  </form>
</main>
