<div class="modal" id="submit-recipe" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Submit a Cake Recipe</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="inputAccount">Cake Name: </label>
            <input type="text" class="form-control" id="cake-name">
          </div>

          <div class="form-group">
            <label for="inputAccount">Cake Difficulty: </label>
            <input type="text" class="form-control" id="cake-difficulty">
          </div>

          <hr>

          <div class="form-group">
            <label for="inputAccount">Ingredient 1: </label>
            <input type="text" class="form-control" id="cake-ingredients">
          </div>

          <hr>

          <div class="form-group">
            <label for="exampleFormControlTextarea1">Instruction 1: </label><br>
            <textarea class="form-control" id="cake-instruction-set1" rows="3"></textarea>
          </div>

          <div class="form-group">
            <label for="exampleFormControlTextarea1">Cake Image URLs: </label><br>
            <textarea class="form-control" id="cake-img-urls" rows="3"></textarea>
          </div>
        </form>

      </div>

      <div class="modal-footer">
        <button id="cake-submit" type="button" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>